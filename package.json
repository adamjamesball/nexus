{
  "name": "nexus-root",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "backend:install": "python3 -m venv .venv && ./.venv/bin/pip install -r backend/requirements.txt",
    "backend:dev": "npm run backend:install && ./.venv/bin/python -m uvicorn app.main:app --app-dir backend --reload --port 8000",
    "frontend:dev": "npm --prefix frontend run dev",
    "docs:dev": "npm --prefix docs run dev",
    "frontend:dev:3003": "npm --prefix frontend run dev:3003",
    "dev": "concurrently -k -n backend,frontend,docs -c blue,green,yellow \"npm:backend:dev\" \"npm:frontend:dev\" \"npm:docs:dev\"",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix frontend run start",
    "eval:company-intel": "PYTHONPATH=./backend python3 backend/evals/run_agent_eval.py",
    "smoke": "bash scripts/smoke.sh"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
