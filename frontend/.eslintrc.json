{
  "extends": ["next", "next/core-web-vitals"],
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/*.test.ts", "**/*.test.tsx"],
  "parserOptions": {
    "tsconfigRootDir": "./",
    "project": ["./tsconfig.json"],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/no-unescaped-entities": "off",
    "@typescript-eslint/no-var-requires": "off"
  }
}
